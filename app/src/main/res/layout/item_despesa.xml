<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp"
    tools:context="br.ideal.appdespesaideal.ListaDespesaActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_horizontal_cor"
            android:layout_width="5dp"
            android:layout_height="60dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/textview_despesa_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_horizontal_cor"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:text="10"/>

        <View
            android:id="@+id/view_horizontal_data"
            android:layout_width="2dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/textview_despesa_data"
            android:background="@color/colorCinza2"/>

        <TextView
            android:id="@+id/textview_despesa_desricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_horizontal_data"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="Conta de Luz"/>

        <TextView
            android:id="@+id/textview_despesa_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_horizontal_data"
            android:layout_below="@+id/textview_despesa_desricao"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:text="Divida"/>

        <TextView
            android:id="@+id/textview_despesa_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:text="R$ 50,00"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>